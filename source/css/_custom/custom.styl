// Custom styles.

// fonts
@font-face {
    font-family: 'FZFengYaKaiSongS';
    src: url('/fonts/FZFENGYKS_DAJW--GB1-0.eot');
    src: url('/fonts/FZFENGYKS_DAJW--GB1-0.eot?#iefix') format('embedded-opentype'),
        url('/fonts/FZFENGYKS_DAJW--GB1-0.woff2') format('woff2'),
        url('/fonts/FZFENGYKS_DAJW--GB1-0.woff') format('woff'),
        url('/fonts/FZFENGYKS_DAJW--GB1-0.ttf') format('truetype'),
        url('/fonts/FZFENGYKS_DAJW--GB1-0.svg#FZFENGYKS_DAJW--GB1-0') format('svg');
    font-weight: 800;
    font-style: normal;
}

@font-face {
  font-family: "iconfont";
  src: url('/fonts/iconfont.eot?t=1534669687823'); /* IE9*/
  src: url('/fonts/iconfont.eot?t=1534669687823#iefix') format('embedded-opentype'), /* IE6-IE8 */
  url('data:application/x-font-woff;charset=utf-8;base64,') format('woff'),
  url('/fonts/iconfont.ttf?t=1534669687823') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
  url('/fonts/iconfont.svg?t=1534669687823#iconfont') format('svg'); /* iOS 4.1- */
}

// iconfont
.iconfont {
  font-family:"iconfont" !important;
  font-size:inherit;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-zhihu:before { content: "\e501"; }

::selection {
  background-color: var(--main-color);
}

a:hover {
  color: var(--main-color);
  border-bottom-color: var(--main-color);
}

.headband {
  display: none;
}

.header {
  width: 100%;
  height: 100%;
  background-position: center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.brand {
  background-color: var(--main-color);
}

.site-title {
  font-family: 'FZFengYaKaiSongS';
  font-size: 32px;
  font-weight: 800;
}

.brand:hover {
  background: transparent;
  color: var(--main-color);
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-shadow: inset 0px 0px 0px 4px var(--main-color);
  -moz-box-shadow: inset 0px 0px 0px 4px var(--main-color);
  box-shadow: inset 0px 0px 0px 4px var(--main-color);
  transition: background .5s;
}

.site-nav {
  border-bottom: none;
}

.menu-item > a:hover {
  color: #222;  
}
.posts-expand .post-title-link:hover {
  color: var(--main-color);
}

.posts-expand .post-title-link::before {
  background-color: var(--main-color);
}

.sidebar {
  background-color: var(--main-color);
}

.sidebar-inner {
  color: #fff;
  height: 100%;
}

.sidebar-inner a {
  color: #fff;
}

.sidebar-inner a:hover {
  color: #ddd;
}

.sidebar-toggle {
  background-color: var(--main-color);
  if (hexo-config('needmoreshare2.enable') and hexo-config('needmoreshare2.float.enable') and hexo-config('needmoreshare_style.float') == 'next') { bottom: 71px; }
}

.sidebar-share {
  position: fixed !important;
  left: auto !important;
  right: 30px !important;
  bottom: 45px !important;
  width: 14px !important;
  height: 14px !important;
  padding: 5px !important;
  background: var(--main-color) !important;
  line-height: 0 !important;
  z-index: 1050 !important;
  cursor: pointer !important;
  color: #fff !important;
  -webkit-transform: translateZ(0) !important;
  font-size: 14px !important;
  display: flex;
  justify-content: center;
  align-items: center;

  +tablet() {
    fixbutton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidbar.onmobile');
  }
  +mobile() {
    fixbutton() if hexo-config('sidebar.onmobile');
    hide() if not hexo-config('sidbar.onmobile');
  }
}

#needsharebutton-float {
  if (hexo-config('needmoreshare2.enable') and hexo-config('needmoreshare2.float.enable') and hexo-config('needmoreshare_style.float') == 'next') {
    right: 380px !important;
    bottom: 32px !important;
  }
}

.need-share-button_link {
  if (hexo-config('needmoreshare_style.monochrome')) {
    color: #555 !important;
  }
}

.need-share-button_link:hover {
  if (hexo-config('needmoreshare_style.monochrome')) {
    color: var(--main-color) !important;
    opacity: 1 !important;
  }
}

.site-author-image {
  border: none;
}

.site-author-link {
  border: none;
}

.site-state {
  display: flex !important;
  justify-content: center;
}

.links-of-author {
  display: flex !important;
  justify-content: center;
  align-items: center;
}

.links-of-author-item {
  width: 20px;
  margin: 0px 5px;
}

.links-of-author-item > a {
  border: none;
  margin: 0px;
}

.links-of-author-item > a:before {
  display:none; 
}

.links-of-author-item-zhihu > a {
  margin-bottom: -1px !important;
}

.post-toc ol a,
.sidebar-nav .sidebar-nav-active {
  color: #fff;
  border-bottom-color: var(--main-color);
}

.post-toc .nav .active > a,
.post-toc .nav .active > a:hover,
.post-toc ol a:hover,
.sidebar-nav .sidebar-nav-active:hover {
  color: #fff;
  border-bottom-color: #fff;
  transition: border-bottom-color ease-in .2s;
}

.page-post-detail .sidebar-toggle-line {
  background-color: #fff;
}

.sidebar-footer {
  position: absolute;
  font-size: 12px;
  font-weight: normal;
  bottom: 60px;
  color: #ddd;
  width: 100%;
  text-align: center;
  margin-left: -10px;
}

.sidebar-footer a {
  color: #ddd;
  border-bottom-color: #ddd;
}

.sidebar-footer a:hover {
  color: #fff;
  border-bottom-color: #fff;
}

.back-to-top {
  background-color: var(--main-color);
}

.pagination .prev:hover,
.pagination .next:hover,
.pagination .page-number:hover {
  border-color: var(--main-color);
}

.posts-expand .post-title,
.posts-expand .post-title-link {
  font-weight: bold;
}

.local-search-popup .search-keyword {
  background-color: var(--main-color);
  color: #fff;
  border-bottom: none;
}

.search-result {
  font-size: small;
}

.footer-link {
  border: none;
  color: #999;
}

.footer-link:hover {
  color: var(--main-color);
}

.article-info {
  text-align: center;
  font-size: 12px;
  color: #999;
}

.article-info > a {
  color: #999;
}

.article-info > a:hover {
  color: var(--main-color);
}

.tag-border {
  border: 1px solid #555;
  border-radius: 100px;
  padding: 0px 8px 0px 8px;
}

.tag-border:hover {
  border: 1px solid var(--main-color);
  background-color: var(--main-color);
  color: #fff;
  transition: all .5s;
}

.footnote-backref {
  visibility: hidden;
  word-spacing: -999px;
  letter-spacing: -999px;
}

.footnote-backref:after {
  visibility: visible;
  content: '\21A9\FE0E';
  word-spacing: normal;
  letter-spacing: normal;
}

.wechat-qrcode {
  position: absolute;
  width: 150px;
  height: 150px;
  left: 50%;
  top: 160px;
  transform: translate(-50%, 0);
  background-color: #fff;
  z-index: 9999;
  display: none;
  border-radius: 10px;
  box-shadow: 0px 0px 10px 5px rgba(0,0,0,0.2);
  -webkit-box-shadow: 0px 0px 10px 5px rgba(0,0,0,0.2);
  -moz-box-shadow: 0px 0px 10px 5px rgba(0,0,0,0.2);
}

.wechat-qrcode > img {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

/* modify balloon css */
.links-of-author-item:before {
  margin-bottom: -3px !important;
}

.links-of-author-item:after {
  margin-bottom: 3px !important;
}

.links-of-author-item.hidden:before,
.links-of-author-item.hidden:after {
  display: none;
}

abbr[title] {
  text-decoration: none;
  border-bottom: 1px dotted;
  cursor: help;
}

section.footnotes {
  font-size: 85%;
}

section.footnotes p {
   margin: 0 0 6px 0;
}
