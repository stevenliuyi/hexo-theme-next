// Custom styles.
:root {
  --main-color: #0d8aba;
}

::selection {
  background-color: var(--main-color);
}

a:hover {
  color: var(--main-color);
  border-bottom-color: var(--main-color);
}

.headband {
  display: none;
}

.header {
  width: 100%;
  height: 100%;
  background-image: url('/images/maxime-le-conte-des-floris-151374-unsplash-grayscale.jpg');
  background-position: center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.brand {
  background-color: var(--main-color);
}

.brand:hover {
  background: transparent;
  color: var(--main-color);
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  -webkit-box-shadow: inset 0px 0px 0px 4px var(--main-color);
  -moz-box-shadow: inset 0px 0px 0px 4px var(--main-color);
  box-shadow: inset 0px 0px 0px 4px var(--main-color);
}

.posts-expand .post-title-link:hover {
  color: var(--main-color);
}

.posts-expand .post-title-link::before {
  background-color: var(--main-color);
}

.sidebar {
  background-color: var(--main-color);
}

.sidebar-inner {
  color: #fff;
}

.sidebar-inner * a {
  color: #fff;
}

.sidebar-toggle {
  background-color: var(--main-color);
}

.page-post-detail .sidebar-toggle-line {
  background-color: #fff;
}

.back-to-top {
  background-color: var(--main-color);
}

